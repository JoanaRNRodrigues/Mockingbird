
@model MockingBird.Models.User

<h1>SignUp</h1>
<div>
    
    @using (Html.BeginForm("SignUp"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br/>
        <div>
            <div class="col-lg-2">@Html.LabelFor(u => u.Name)</div>
            <div class="col-lg-10">@Html.TextBoxFor(u => u.Name, new { @class = "form-control" })</div>
        </div>
        <div>
            <div class="col-lg-2">@Html.LabelFor(u => u.UserName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })</div>
        </div>
        <div >
            <div class="col-lg-2">@Html.LabelFor(u => u.Email)</div>
                <div class="col-lg-10">@Html.TextBoxFor(u => u.Email, new { @class = "form-control" })</div>
        </div>
        <div >
            <div class="col-lg-2">@Html.LabelFor(u => u.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(u => u.Password, new { @class = "form-control", type = "Password" })</div>
        </div>
        <div >
            <div class="col-lg-2">@Html.LabelFor(u => u.ConfirmPassword)</div>
            <div class="col-lg-10">@Html.TextBoxFor(u => u.ConfirmPassword, new { @class = "form-control", type = "Password" })</div>
        </div>
    
            <input type="submit" value="Sign Up" class="btn btn-primary" />
    }
</div>
<div>
    <a asp-action="Login">Already have an account? Login here</a>
</div>
